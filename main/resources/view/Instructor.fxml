<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectdriving.controller.InstructorController">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Page Title -->
            <Label alignment="CENTER" style="-fx-text-fill: #2D98DA;" text="Instructor Page" VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0" />
                </font>
            </Label>

            <!-- Instructor ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Instructor ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <Label fx:id="lblInstructorId" text="I001" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Full Name -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Full Name">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtFullName" promptText="Instructor Name" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Phone -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Phone">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtPhone" promptText="0771234567" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Email -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Email">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtEmail" promptText="instructor@gmail.com" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Availability Note -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Course">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
            <ComboBox fx:id="comCourse" prefHeight="26.0" prefWidth="258.0" promptText="select course" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="100.0" style="-fx-background-color: #26DE81;" text="Save" textFill="WHITE" />
                <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="100.0" style="-fx-background-color: #2D98DA;" text="Update" textFill="WHITE" />
                <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="100.0" style="-fx-background-color: #EB3B5A;" text="Delete" textFill="WHITE" />
                <Button fx:id="btnReset" onAction="#btnResetOnAction" prefWidth="100.0" style="-fx-background-color: #FC5C65;" text="Reset" textFill="WHITE" />
            </HBox>

            <!-- Instructor Table -->
            <TableView fx:id="tblInstructor" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="100.0" text="Instructor ID" />
                    <TableColumn fx:id="colFullName" prefWidth="150.0" text="Full Name" />
                    <TableColumn fx:id="colPhone" prefWidth="100.0" text="Phone" />
                    <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                    <TableColumn fx:id="colCourse" prefWidth="200.0" text="Availability" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
