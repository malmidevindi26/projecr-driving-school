<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projectdriving.controller.InstructorController"
            prefHeight="550.0" prefWidth="650.0">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- Page Title -->
            <Label text="Instructor Page" alignment="CENTER"
                   style="-fx-text-fill: #2D98DA;"
                   VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0"/>
                </font>
            </Label>

            <!-- Instructor ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Instructor ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <Label fx:id="lblInstructorId" text="I001" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Full Name -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Full Name">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtFullName" promptText="Instructor Name"
                           style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Phone -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Phone">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtPhone" promptText="0771234567"
                           style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Email -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Email">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtEmail" promptText="instructor@gmail.com"
                           style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Availability Note -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Availability">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextArea fx:id="txtAvailability" promptText="Availability Note"
                          style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                          HBox.hgrow="ALWAYS" prefRowCount="3"/>
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" text="Save" prefWidth="100.0"
                        style="-fx-background-color: #26DE81;" textFill="WHITE"
                        onAction="#btnSaveOnAction"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100.0"
                        style="-fx-background-color: #2D98DA;" textFill="WHITE"
                        onAction="#btnUpdateOnAction"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100.0"
                        style="-fx-background-color: #EB3B5A;" textFill="WHITE"
                        onAction="#btnDeleteOnAction"/>
                <Button fx:id="btnReset" text="Reset" prefWidth="100.0"
                        style="-fx-background-color: #FC5C65;" textFill="WHITE"
                        onAction="#btnResetOnAction"/>
            </HBox>

            <!-- Instructor Table -->
            <TableView fx:id="tblInstructor" VBox.vgrow="ALWAYS"
                       onMouseClicked="#onClickTable">
                <columns>
                    <TableColumn fx:id="colId" text="Instructor ID" prefWidth="100.0"/>
                    <TableColumn fx:id="colFullName" text="Full Name" prefWidth="150.0"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="100.0"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150.0"/>
                    <TableColumn fx:id="colAvailability" text="Availability" prefWidth="200.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
