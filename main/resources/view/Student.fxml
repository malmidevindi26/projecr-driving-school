<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectdriving.controller.StudentController">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">


            <!-- Page Title -->
            <Label alignment="CENTER" prefHeight="43.0" prefWidth="610.0" style="-fx-text-fill: #2D98DA;" text="Student Registration Page" VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0" />
                </font>
            </Label>

            <!-- Student ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Student ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <Label fx:id="lblStudentId" text="S001" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Name -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Name">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtName" promptText="Student Name" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- NIC -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="NIC">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtNic" promptText="000000000V" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Email -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Email">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtEmail" promptText="student@gmail.com" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Phone -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Phone">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtPhone" promptText="0771234567" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Course -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Course">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbCourse" promptText="Select Course" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="100.0" style="-fx-background-color: #26DE81;" text="Save" textFill="WHITE" />
                <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="100.0" style="-fx-background-color: #2D98DA;" text="Update" textFill="WHITE" />
                <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="100.0" style="-fx-background-color: #EB3B5A;" text="Delete" textFill="WHITE" />
                <Button fx:id="btnReset" onAction="#btnResetOnAction" prefWidth="100.0" style="-fx-background-color: #FC5C65;" text="Reset" textFill="WHITE" />
            </HBox>

            <!-- Student Table -->
            <TableView fx:id="tblStudent" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="100.0" text="Student ID" />
                    <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
                    <TableColumn fx:id="colNic" prefWidth="100.0" text="NIC" />
                    <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email" />
                    <TableColumn fx:id="colPhone" prefWidth="100.0" text="Phone" />
                    <TableColumn fx:id="colCourse" prefWidth="120.0" text="Course" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
