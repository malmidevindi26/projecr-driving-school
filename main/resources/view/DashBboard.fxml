<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectdriving.controller.DashboardController">

    <!-- Sidebar -->
    <VBox prefWidth="220.0" spacing="20.0" style="-fx-background-color: #34495e;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Logo / Title -->
        <Label alignment="CENTER" prefHeight="60" prefWidth="220" text="Driving School" textFill="WHITE">
            <font>
                <Font name="Calibri Bold" size="28.0" />
            </font>
        </Label>

        <!-- Menu Buttons -->
        <VBox alignment="TOP_CENTER" spacing="10">
            <!-- Student -->
            <Button fx:id="btnStudent" mnemonicParsing="false" onAction="#btnStudentOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Students">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <!-- Course -->
            <Button fx:id="btnCourse" mnemonicParsing="false" onAction="#btnCourseOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Courses">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <!-- Instructor -->
            <Button fx:id="btnInstructor" mnemonicParsing="false" onAction="#btnInstructorOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Instructors">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <!-- Lesson -->
            <Button fx:id="btnLesson" mnemonicParsing="false" onAction="#btnLessonOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Lessons">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

            <!-- Payment -->
            <Button fx:id="btnPayment" mnemonicParsing="false" onAction="#btnPaymentOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Payments">
                <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
         <Button fx:id="btnAssign" mnemonicParsing="false" onAction="#btnAssignNewOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Assign to new course">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
         <Button fx:id="btnChangeCredentials" mnemonicParsing="false" onAction="#btnChangeCredentialsOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: WHITE; -fx-font-size: 16px;" text="Change Credentials">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
         </Button>
        </VBox>
      <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#btnLogoutOnAction" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-font-size: 16px;" text="Logout">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
    </VBox>

    <!-- Main Container -->
    <AnchorPane fx:id="ancMainContainer" style="-fx-background-color: #ecf0f1;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Pages will load dynamically here -->
    </AnchorPane>

</AnchorPane>
