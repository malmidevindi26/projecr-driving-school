<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectdriving.controller.PaymentController">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Page Title -->
            <Label alignment="CENTER" style="-fx-text-fill: #2D98DA;" text="Payment Management Page" VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0" />
                </font>
            </Label>

            <!-- Payment ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Payment ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <Label fx:id="lblPaymentId" text="P001" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Student -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Student">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbStudent" promptText="Select Student" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Enrollment / Course -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Enrollment">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbEnrollment" promptText="Select Enrollment" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Amount -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Amount">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtAmount" promptText="e.g., 5000" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Payment Method -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Method">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbMethod" promptText="Select Method" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Payment Status -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Course">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbCourse" promptText="Select Course" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Reference -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Reference">
                    <font>
                        <Font name="Calibri Bold" size="13.0" />
                    </font>
                </Label>
                <TextField fx:id="txtReference" promptText="Payment Reference" style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;" HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefWidth="100.0" style="-fx-background-color: #26DE81;" text="Save" textFill="WHITE" />
                <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefWidth="100.0" style="-fx-background-color: #2D98DA;" text="Update" textFill="WHITE" />
                <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefWidth="100.0" style="-fx-background-color: #EB3B5A;" text="Delete" textFill="WHITE" />
                <Button fx:id="btnReset" onAction="#btnResetOnAction" prefWidth="100.0" style="-fx-background-color: #FC5C65;" text="Reset" textFill="WHITE" />
            </HBox>

            <!-- Payment Table -->
            <TableView fx:id="tblPayment" onMouseClicked="#onClickTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80.0" text="Payment ID" />
                    <TableColumn fx:id="colStudent" prefWidth="120.0" text="Student" />
                    <TableColumn fx:id="colEnrollment" prefWidth="120.0" text="Enrollment" />
                    <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
                    <TableColumn fx:id="colMethod" prefWidth="100.0" text="Method" />
                    <TableColumn fx:id="colCourse" prefWidth="100.0" text="Status" />
                    <TableColumn fx:id="colReference" prefWidth="150.0" text="Reference" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
