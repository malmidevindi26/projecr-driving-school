<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projectdriving.controller.PaymentController"
            prefHeight="550.0" prefWidth="650.0">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- Page Title -->
            <Label text="Payment Management Page" alignment="CENTER"
                   style="-fx-text-fill: #2D98DA;"
                   VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0"/>
                </font>
            </Label>

            <!-- Payment ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Payment ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <Label fx:id="lblPaymentId" text="P001" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Student -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Student">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbStudent" promptText="Select Student" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Enrollment / Course -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Enrollment">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbEnrollment" promptText="Select Enrollment" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Amount -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Amount">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtAmount" promptText="e.g., 5000"
                           style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Payment Method -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Method">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbMethod" promptText="Select Method" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Payment Status -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Status">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbStatus" promptText="Select Status" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Reference -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Reference">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtReference" promptText="Payment Reference"
                           style="-fx-background-color: #fff; -fx-border-color: #BB25B9; -fx-border-width: 0 0 2px 0;"
                           HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" text="Save" prefWidth="100.0"
                        style="-fx-background-color: #26DE81;" textFill="WHITE"
                        onAction="#btnSaveOnAction"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100.0"
                        style="-fx-background-color: #2D98DA;" textFill="WHITE"
                        onAction="#btnUpdateOnAction"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100.0"
                        style="-fx-background-color: #EB3B5A;" textFill="WHITE"
                        onAction="#btnDeleteOnAction"/>
                <Button fx:id="btnReset" text="Reset" prefWidth="100.0"
                        style="-fx-background-color: #FC5C65;" textFill="WHITE"
                        onAction="#btnResetOnAction"/>
            </HBox>

            <!-- Payment Table -->
            <TableView fx:id="tblPayment" VBox.vgrow="ALWAYS"
                       onMouseClicked="#onClickTable">
                <columns>
                    <TableColumn fx:id="colId" text="Payment ID" prefWidth="80.0"/>
                    <TableColumn fx:id="colStudent" text="Student" prefWidth="120.0"/>
                    <TableColumn fx:id="colEnrollment" text="Enrollment" prefWidth="120.0"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="100.0"/>
                    <TableColumn fx:id="colMethod" text="Method" prefWidth="100.0"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                    <TableColumn fx:id="colReference" text="Reference" prefWidth="150.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
