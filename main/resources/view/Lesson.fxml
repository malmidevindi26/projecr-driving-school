<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.projectdriving.controller.LessonController"
            prefHeight="550.0" prefWidth="650.0">

    <children>
        <VBox spacing="10.0" style="-fx-background-color: #fff;"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- Page Title -->
            <Label text="Lesson Management Page" alignment="CENTER"
                   style="-fx-text-fill: #2D98DA;"
                   VBox.vgrow="NEVER">
                <font>
                    <Font name="Calibri Bold" size="24.0"/>
                </font>
            </Label>

            <!-- Lesson ID -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Lesson ID">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <Label fx:id="lblLessonId" text="L001" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Student -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Student">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbStudent" promptText="Select Student" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Course -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Course">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbCourse" promptText="Select Course" HBox.hgrow="ALWAYS"
                          onAction="#onCourseSelected"/>
            </HBox>

            <!-- Instructor -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Instructor">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbInstructor" promptText="Select Instructor" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Start Time -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Start Time">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="dpStartDate" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtStartTime" promptText="HH:mm" HBox.hgrow="ALWAYS"
                           onAction="#onStartTimeEntered"/>
            </HBox>

            <!-- End Time -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="End Time">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <DatePicker fx:id="dpEndDate" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtEndTime" promptText="HH:mm" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Status -->
            <HBox spacing="10.0">
                <Label prefWidth="150.0" text="Status">
                    <font>
                        <Font name="Calibri Bold" size="13.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbStatus" promptText="Select Status" HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnSave" text="Save" prefWidth="100.0"
                        style="-fx-background-color: #26DE81;" textFill="WHITE"
                        onAction="#btnSaveOnAction"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100.0"
                        style="-fx-background-color: #2D98DA;" textFill="WHITE"
                        onAction="#btnUpdateOnAction"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100.0"
                        style="-fx-background-color: #EB3B5A;" textFill="WHITE"
                        onAction="#btnDeleteOnAction"/>
                <Button fx:id="btnReset" text="Reset" prefWidth="100.0"
                        style="-fx-background-color: #FC5C65;" textFill="WHITE"
                        onAction="#btnResetOnAction"/>
            </HBox>

            <!-- Lesson Table -->
            <TableView fx:id="tblLesson" VBox.vgrow="ALWAYS"
                       onMouseClicked="#onClickTable">
                <columns>
                    <TableColumn fx:id="colId" text="Lesson ID" prefWidth="80.0"/>
                    <TableColumn fx:id="colStudent" text="Student" prefWidth="120.0"/>
                    <TableColumn fx:id="colCourse" text="Course" prefWidth="120.0"/>
                    <TableColumn fx:id="colInstructor" text="Instructor" prefWidth="120.0"/>
                    <TableColumn fx:id="colStart" text="Start Time" prefWidth="100.0"/>
                    <TableColumn fx:id="colEnd" text="End Time" prefWidth="100.0"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
